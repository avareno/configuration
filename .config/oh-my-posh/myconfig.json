{
  "console_title_template": "{{ .Shell }} in {{ .Folder }}",
  "version": 3,
  "final_space": true,

  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "os",
          "style": "plain",
          "foreground": "cyan"
        },
        {
          "type": "path",
          "style": "diamond",
          "foreground": "blue"
        },
        {
          "type": "git",
          "style": "powerline",
          "foreground": "green",
          "properties": {
            "display_status": true,
            "display_upstream": true,
            "display_stash_count": true,
            "display_add_count": true,
            "display_push_count": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "exit",
          "style": "plain",
          "foreground": "green",
          "properties": {
            "success_icon": "✔",
            "error_icon": "❌"
          }
        }
      ]
    }
  ]
}
